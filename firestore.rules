rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per squadre - accesso solo ai propri dati
    match /teams/{teamId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regole per ricezioni - accesso solo ai propri dati
    match /receptions/{receptionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regole per formazioni - accesso solo ai propri dati  
    match /formations/{formationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Regole per squadre pubbliche (solo lettura)
    match /public_teams/{teamId} {
      allow read: if true; // Lettura pubblica
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Blocca tutto il resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}